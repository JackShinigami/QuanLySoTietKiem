            Grid.Row="0"
            Grid.ColumnSpan="2">

            <Label
                Content="Tra cứu sổ"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="30"
                FontWeight="Bold"
                Foreground="Black" />
        </Border>
        <!--#endregion-->

        <!--#region Vùng chính-->
