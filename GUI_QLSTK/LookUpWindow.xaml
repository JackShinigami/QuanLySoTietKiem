            <DataGrid
                x:Name="lookUpDataGrid"
                Margin="10"
                AutoGenerateColumns="False"
                FontSize="16"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                CanUserResizeRows="False"
                CanUserSortColumns="False"
                IsReadOnly="True"
                RowHeight="50"
                SelectionMode="Single"
                SelectionUnit="FullRow"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto"                
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ItemsSource="{Binding}">


                <DataGrid.Columns>
                    
                                       
                    <DataGridTextColumn 
                        Binding="{Binding Stt}"
                        Header="STT"
                        Width="40"
                        FontSize="16" />
                    
                    <DataGridTextColumn
                        Binding="{Binding Maso}"
                        Header="Mã sổ"
                        Width="100"
                        FontSize="16" />

                    <DataGridTextColumn
                        Binding="{Binding Loaitietkiem, Converter={StaticResource PeriodToStringConverter}}"
                        Header="Loại tiết kiệm"
                        Width="150"
                        FontSize="16" />

                    <DataGridTextColumn
                        Binding="{Binding Cccd}"
                        Header="CMND/CCCD"
                        Width="150"
                        FontSize="16" />
                    
                    <DataGridTextColumn
                        Binding="{Binding Hoten}"
                        Header="Họ tên"
                        Width="*"
                        FontSize="16" />     

                    <DataGridTextColumn
                        Binding="{Binding Sodu}"
                        Header="Số dư"
                        Width="200"
                        FontSize="16" />


                </DataGrid.Columns>

            </DataGrid>


        </Border>
        
        <!--#endregion-->

        <!--#region Nút đóng-->
        <Button
            x:Name="closeButton"
            Grid.Column="1"
            Grid.Row="3"
            Content="Đóng"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="200"
            Height="50"
            Style="{StaticResource GreyButtonStyle}"
            Click="closeButton_Click" />
        <!--#endregion-->

        <!--#region tiến độ-->
        <ProgressBar
            x:Name="progressBar"
            Grid.Column="0"
            Grid.Row="1"
            Margin="15 5 15 0"
            Height="5"
            Background="#eee"
            BorderThickness="0"
            VerticalAlignment="Top"
            IsIndeterminate="True"
            Visibility="Hidden" />

    </Grid>

</Window>
